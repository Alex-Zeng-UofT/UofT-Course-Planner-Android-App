<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/StudentWelcome"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".StudentWelcomeActivity">

	<Button
		android:id="@+id/welcome_page_timeline_btn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:width="120sp"
		android:backgroundTint="@color/uft_dark"
		android:fontFamily="sans-serif-black"
		android:text="@string/welcome_page_future_btn"
		android:textSize="12sp"
		app:cornerRadius="20sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.945"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/welcome_app_description"
		app:layout_constraintVertical_bias="0.409" />

	<Button
		android:id="@+id/welcome_page_courses_btn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:width="120sp"
		android:backgroundTint="@color/uft_dark"
		android:fontFamily="sans-serif-black"
		android:text="@string/welcome_page_courses_btn"
		android:textSize="12sp"
		app:cornerRadius="20sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.054"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/welcome_app_description"
		app:layout_constraintVertical_bias="0.409" />

	<ImageView
		android:id="@+id/welcome_page_icon"
		android:layout_width="343dp"
		android:layout_height="315dp"
		android:layout_marginTop="16dp"
		android:contentDescription="@string/welcome_page_img_description"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/welcome_user_msg"
		app:srcCompat="@drawable/student_icon" />

	<TextView
		android:id="@+id/welcome_user_msg"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="88dp"
		android:fontFamily="@font/montserrat_bold"
		android:text="@string/welcome_page_user_header_msg"
		android:textColor="@color/uft_dark"
		android:textSize="32sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/welcome_app_description"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:width="200sp"
		android:fontFamily="@font/inter_semibold"
		android:gravity="center"
		android:text="@string/welcome_page_app_description"
		android:textColor="#000000"
		android:textSize="18sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.497"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/welcome_page_icon" />

	<Button
		android:id="@+id/welcome_page_my_course_btn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:width="120sp"
		android:backgroundTint="@color/uft_dark"
		android:fontFamily="sans-serif-black"
		android:text="@string/welcome_page_previous_btn"
		android:textSize="12sp"
		app:cornerRadius="20sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.498"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/welcome_app_description"
		app:layout_constraintVertical_bias="0.409" />

	<ImageView
		android:id="@+id/welcome_page_uft_logo"
		android:layout_width="73dp"
		android:layout_height="59dp"
		android:layout_marginTop="4dp"
		android:layout_marginEnd="4dp"
		android:contentDescription="@string/home_page_img_description"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/uoft" />

</androidx.constraintlayout.widget.ConstraintLayout>